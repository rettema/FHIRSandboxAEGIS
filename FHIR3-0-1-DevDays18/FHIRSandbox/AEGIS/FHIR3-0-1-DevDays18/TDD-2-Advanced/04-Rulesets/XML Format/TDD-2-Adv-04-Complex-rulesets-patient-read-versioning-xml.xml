<TestScript xmlns="http://hl7.org/fhir">
	<id value="TDD-2-Adv-04-Complex-rulesets-patient-read-versioning-xml" />
	<url value="https://touchstone.aegis.net/fhir/TestScript/TDD-2-Adv-04-Complex-rulesets-patient-read-versioning-xml" />
	<name value="TDD-2 - Advanced - 04 - Complex Asserts - Rulesets Patient Read Versioning - XML" />
	<status value="active" />
	<date value="2018-04-27" />
	<publisher value="AEGIS.net, Inc." />
	<contact>
		<name value="Touchstone Support" />
		<telecom>
			<system value="email" />
			<value value="Touchstone_Support@aegis.net" />
			<use value="work" />
		</telecom>
	</contact>
	<description
		value="Complex Asserts Testing - Demonstrate the use of a ruleset with a Patient read. The actual test is a read operation for a Patient in XML format where a ruleset is used to conditionally check the system under test for versioning support and either skip or apply checks for expected HTTP headers." />
	<copyright value="Â© AEGIS.net, Inc. 2015+" />
	<fixture id="patient-create">
		<resource>
			<reference value="../_reference/resources/rulesets-patient-create.xml" />
		</resource>
	</fixture>
	<profile id="patient-profile">
		<reference value="http://hl7.org/fhir/StructureDefinition/Patient" />
	</profile>
	<variable>
		<name value="patientResourceId" />
		<path value="Bundle/entry[1]/resource/Patient/id" />
		<sourceId value="setup-create-patient-search-response" />
	</variable>
	<variable>
		<name value="searchIdentifier" />
		<path value="Patient/identifier[1]/value" />
		<sourceId value="patient-create" />
	</variable>
	<variable>
		<name value="searchFamilyName" />
		<path value="Patient/name[1]/family" />
		<sourceId value="patient-create" />
	</variable>
	<variable>
		<name value="searchGivenName" />
		<path value="Patient/name[1]/given[1]" />
		<sourceId value="patient-create" />
	</variable>
	<ruleset id="ruleset-versioning-headers">
		<resource>
			<reference value="../_reference/ruleset/RuleSet-VersioningHeaders-Groovy.xml" />
		</resource>
		<rule>
			<ruleId value="assertETagIfSupported" />
			<param>
				<name value="resource" />
				<value value="Patient" />
			</param>
		</rule>
		<rule>
			<ruleId value="assertLastModifiedIfSupported" />
			<param>
				<name value="resource" />
				<value value="Patient" />
			</param>
		</rule>
	</ruleset>
	<setup>
		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes" />
					<code value="delete" />
				</type>
				<resource value="Patient" />
				<description value="System-generated search and delete operations from conditional delete to ensure the Patient does not exist on the server." />
				<accept value="xml" />
				<contentType value="none" />
				<params value="?family=${searchFamilyName}&amp;given=${searchGivenName}" />
			</operation>
		</action>
		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes" />
					<code value="create" />
				</type>
				<description value="Create the first Patient resource needed for test." />
				<accept value="xml" />
				<contentType value="xml" />
				<sourceId value="patient-create" />
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 201(Created)." />
				<response value="created" />
			</assert>
		</action>
		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes" />
					<code value="search" />
				</type>
				<resource value="Patient" />
				<description value="Search for the created Patient by the unique identifier. This populates the patientResourceId variable needed for the read operation." />
				<accept value="xml" />
				<contentType value="none" />
				<params value="?identifier=${searchIdentifier}" />
				<responseId value="setup-create-patient-search-response" />
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)." />
				<response value="okay" />
			</assert>
		</action>
	</setup>
	<test id="PatientReadVersioning">
		<name value="PatientReadVersioning" />
		<description value="Read the created Patient in XML format. The expected response code is 200 (OK). The expected response payload is the Patient resource in XML format." />
		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes" />
					<code value="read" />
				</type>
				<resource value="Patient" />
				<description value="Read the created Patient. The destination server support of versioning will be conditionally evaluated." />
				<accept value="xml" />
				<contentType value="none" />
				<params value="/${patientResourceId}" />
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)." />
				<direction value="response" />
				<response value="okay" />
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned format is XML." />
				<direction value="response" />
				<contentType value="xml" />
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is Patient." />
				<direction value="response" />
				<resource value="Patient" />
			</assert>
		</action>
		<action>
			<assert>
				<description value="Validate that the returned resource conforms to the base FHIR Patient profile." />
				<direction value="response" />
				<validateProfileId value="patient-profile" />
			</assert>
		</action>
		<action>
			<assert>
				<description value="Complex ruleset assertion to conditionally validate expected versioning HTTP Headers." />
				<direction value="response" />
				<ruleset>
					<rulesetId value="ruleset-versioning-headers" />
				</ruleset>
			</assert>
		</action>
	</test>
</TestScript>