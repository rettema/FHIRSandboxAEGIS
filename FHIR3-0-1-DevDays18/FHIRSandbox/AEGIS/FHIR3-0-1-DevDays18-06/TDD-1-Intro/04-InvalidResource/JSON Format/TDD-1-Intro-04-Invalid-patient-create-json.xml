<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
	<id value="TDD-1-Intro-04-Invalid-patient-create-json" />
	<url value="https://touchstone.aegis.net/fhir/TestScript/TDD-1-Intro-04-Invalid-patient-create-json" />
	<name value="TDD-1 - Intro - 04 - Invalid - Patient Create - JSON" />
	<status value="active" />
	<date value="2018-04-27" />
	<publisher value="AEGIS.net, Inc." />
	<contact>
		<name value="Touchstone Support" />
		<telecom>
			<system value="email" />
			<value value="Touchstone_Support@aegis.net" />
			<use value="work" />
		</telecom>
	</contact>
	<description value="Test use of profiles with a Patient create in JSON format using a fixture containing invalid contents. NOTE: the profile validation is expected to fail." />
	<copyright value="Â© AEGIS.net, Inc. 2015+" />
	<fixture id="patient-create">
		<resource>
			<reference value="../_reference/resources/patient-create-invalid.json" />
		</resource>
	</fixture>
	<profile id="patient-profile">
		<reference value="http://hl7.org/fhir/StructureDefinition/Patient" />
	</profile>
	<test id="PatientCreateInvalidWithProfile">
		<name value="PatientCreateInvalidWithProfile" />
		<description value="Create a Patient in JSON format using an invalid static fixture. The expected response code is a 4xx error. The response payload should contain an OperationOutcome resource in JSON format. PLEASE NOTE: THIS TEST IS EXPECTED TO FAIL." />
		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes" />
					<code value="create" />
				</type>
				<resource value="Patient" />
				<description value="Create a Patient in JSON format using an invalid static fixture" />
				<accept value="json" />
				<contentType value="json" />
				<sourceId value="patient-create" />
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the sent Patient conforms to the base FHIR specification." />
				<direction value="request" />
				<validateProfileId value="patient-profile" />
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is a 4xx error." />
				<direction value="response" />
				<operator value="greaterThan" />
				<responseCode value="399" />
			</assert>
		</action>
	</test>
</TestScript>